
@{
    Layout = "~/Views/Shared/_Layout - admin.cshtml";
}

@model MuggShop.Models.Product

@{
    ViewData["Title"] = "Add";
}


<div class="col-lg-12">
    <div class="section-title mb-5">
        <h2>Add a mug</h2>
    </div>

    @using (Html.BeginForm("Add", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="row">
            <div class="col form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { placeholder = "very tasty...", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
        </div>


        <div class="row">
            <div class="col form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { placeholder = "name@example.com", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
        </div>

        <div class="row">
            <div class="col form-group">
                @Html.LabelFor(m => m.Price)
                @Html.TextBoxFor(m => m.Price, new { placeholder = "name@example.com", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Price)
            </div>
        </div>

        <div class="row">
            <div class="col form-group">
                @Html.LabelFor(m => m.PictureURL)
                <!-- <input type="file" class="form-control" name = "PictureURL" id = "PictureURL"/> -->
                @Html.TextBoxFor(m => m.PictureURL, "PictureURL", new { type = "file", @class = "form-control", value="PictureURL" }) 
                @Html.ValidationMessageFor(m => m.PictureURL)
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <input type="submit" value="Save" class="btn btn-primary py-3 px-5">
            </div>
        </div>
    }
</div>



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
