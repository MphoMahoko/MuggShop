@{
    ViewData["Title"] = "Home Page";
    ViewData["Description"] = "Have your pick from our collection of the worlds most beautiful muggs";
}

@model IEnumerable<MuggShop.Models.Product>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 mb-5 col-md-6">
            <div class="wine_v_1 text-center pb-4">
                <a href="@Url.Action("Single","Products", new {id = item.Id })" class="thumbnail d-block mb-4"><img  src="~/uploadImages/@item.PictureURL" alt="Image" class="img-fluid"></a>

                <div>
                    <h3 class="heading mb-1"><a href="#">@item.Name</a></h3>
                    <span class="price">R @item.Price</span>
                </div>

                <div class="wine-actions">
                    <h3 class="heading-2"><a href="#">@item.Name</a></h3>
                    <span class="price d-block">R @item.Price</span>
                    <div class="rating">
                        <span class="icon-star"></span>
                        <span class="icon-star"></span>
                        <span class="icon-star"></span>
                        <span class="icon-star"></span>
                        <span class="icon-star-o"></span>
                    </div>
                    @Html.ActionLink("Add to Cart", "AddToCart", "ShoppingCart", new { id = item.Id }, new { @class = "btn add icon-shopping-bag mr-3", Id = "addbtn", onclick = "myFunction()" })

                </div>
            </div>
        </div>
    }






</div>


