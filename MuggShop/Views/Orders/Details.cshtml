@model MuggShop.Models.Order

@{
    Layout = "~/Views/Shared/_Layout - minimal.cshtml";

    ViewData["Title"] = "Order details";
    ViewData["Description"] = "Look into the details of this particular order";
}

<div class="site-section  pb-0">
    

        <div class="container">
            <div class="row">
                <div class="col-sm">
                    <div class="card ">
                        <h5 class="card-header bg-dark h5" style="color: white;">Shipping information</h5>
                        <div class="card-body">
                            <h5 class="card-title">Address </h5>
                            <p class="card-text">@Model.Address1 </p>
                            <p class="card-text">@Model.PostCode</p>
                            <p class="card-text">@Model.Province</p>

                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card">
                        <h5 class="card-header  bg-dark h5" style="color: white;">Customer details</h5>
                        <div class="card-body">

                            <p class="card-text">@Model.FirstName @Model.LastName</p>
                            <p class="card-text">@Model.Phone</p>

                        </div>
                    </div>
                </div>
                <div class="col-sm">
                    <div class="card">
                        <h5 class="card-header  bg-dark h5" style="color: white;">Order status</h5>
                        <div class="card-body">
                            <h5 class="card-title">@Model.status</h5>

                        </div>
                    </div>
                </div>
            </div>
        </div>



        @{
            decimal total = 0;
        }

        <br />

        <div class="row mb-5">
            <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th class="product-thumbnail">Image</th>
                                <th class="product-name">Product</th>
                                <th class="product-price">Price</th>
                                <th class="product-quantity">Quantity</th>
                                <th class="product-total">Total</th>

                            </tr>
                        </thead>
                        <tbody>


                            @{
                                decimal grandTotal = 0;

                                foreach (var item in Model.OrderDetails)
                                {

                                    <tr>
                                        <td class="product-thumbnail">
                                            <img src="~/uploadImages/@item.Product.PictureURL" alt="Image" class="img-fluid" style="height:100px; width:100px;">
                                            
                                        </td>
                                        <td class="product-name">
                                            <h2 class="h5 cart-product-title text-black">@item.Product.Name</h2>
                                        </td>
                                        <td>R @item.Product.Price</td>
                                        <td>
                                            <div class="input-group mb-3" style="max-width: 120px;">

                                                <input type="text" disabled="disabled" class="form-control text-center border mr-0" value="@item.Count" placeholder=""
                                                       aria-label="Example text with button addon" aria-describedby="button-addon1">

                                            </div>

                                        </td>
                                       
                                        <td>R @item.Total</td>

                                    </tr>
                                    grandTotal += item.Total;
                                }
                                <tr>
                                    <td class="product-thumbnail"></td>
                                    <td class="product-name"></td>
                                    <td></td>
                                    <td>
                                        <div class="input-group mb-3" style="max-width: 120px;">


                                        </div>

                                    </td>
                                    <td>R @grandTotal</td>

                                </tr>
                            }
                        </tbody>
                    </table>



                </div>
            </form>
        </div>

    </div>
</div>